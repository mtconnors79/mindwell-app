# Production Environment Variables Template
# Copy this to .env and fill in the values for local testing
# For Elastic Beanstalk, set these in the EB Console or via eb setenv

NODE_ENV=production
PORT=8080

# PostgreSQL (AWS RDS)
DATABASE_URL=postgresql://user:password@host.rds.amazonaws.com:5432/database

# MongoDB (Atlas)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-secure-jwt-secret-at-least-32-characters
JWT_EXPIRES_IN=1h

# Firebase (for mobile auth)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Claude AI (for sentiment analysis)
CLAUDE_API_KEY=sk-ant-your-claude-api-key

# Email (for Care Circle invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@soulbloom.com

# Frontend URL (for CORS and emails)
FRONTEND_URL=https://your-domain.com

# Optional: Enable cron jobs
ENABLE_CRON_JOBS=true
